<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgWord"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        tools:src="@drawable/speaker" />

    <TextView
        android:id="@+id/lblWordEng"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="#FFF"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#522357"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="Apple" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_tag_words"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblPronunciation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="25sp"
                tools:text="/ˈæpl/" />

            <ImageView
                android:id="@+id/imgSound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:src="@drawable/baseline_volume_up_white_48" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/lblVietWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="25sp"
                tools:text="Quả táo" />
        </LinearLayout>

        <TextView
            android:id="@+id/lblDinhNghia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#FFF"
            android:textSize="20sp"
            tools:text="a round fruit with shiny red or green skin and firm white flesh" />
    </LinearLayout>
</LinearLayout>